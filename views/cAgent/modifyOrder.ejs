<!DOCTYPE html>
<html lang="en" dir="rtl">
  <head>
    <%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/find_tracking_code.css" />
  </head>
  <body>
    <%-include('../includes/nav.ejs')%>
    <!-- background -->
    <main class="daily">
      <div class="container">
        <div class="main-content">
          <!-- content part -->
          <div class="content">
            <!-- heading part -->
            <div class="heading">
              <h1 class="heading_text">البحث عن أوردر وارد من بائع</h1>
            </div>

            <!-- top part -->
            <div class="top_part">
              <div class="flex-content">
                <!-- date input -->
                <input
                  type="text"
                  name="orderId"
                  id="orderId"
                  placeholder="Enter Order ID"
                />
              </div>
              <!-- confirm btn -->
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button type="button" id="gtOrdrId" class="confirm">
                إظهر بيانات الأوردر
              </button>
            </div>

            <!-- bottom part -->

            <div class="bottom_part">
              <!-- just a container -->
              <div class="tables_container" id="tbl">
                <!-- table -->
              </div>
              <div class="top_part">
                <form action="/cAgent/confirm/orderModify" method="POST">
                  <div class="region-select">
                    <label for="region"
                      >اختر المحافظه المراد التعديل اليها</label
                    >
                    <select name="region" id="region" required>
                      <%-include('../includes/gov.ejs')%>
                    </select>
                  </div>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <input type="hidden" name="id" />
                  <button type="submit" class="confirm">
                    تغيير محافظة الاستلام
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="/js/pkgActions.js"></script>
    <%-include('../includes/footer.ejs')%>
  </body>
</html>
